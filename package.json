{
  "name": "snake",
  "version": "1.0.0",
  "description": "snake in react & xstate",
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "dev": "bunx vite",
    "prettier:check": "prettier --check '**/*.{ts,tsx,js,jsx,css,md,json}'",
    "prettier:write": "prettier --write '**/*.{ts,tsx,js,jsx,css,md,json}'",
    "serve": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write '**/*.{ts,tsx,js,jsx,css,md,json}'"
    ]
  },
  "dependencies": {
    "@thi.ng/transducers": "^8.7.1",
    "@xstate/react": "beta",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xstate": "beta"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.5.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-storybook": "^0.6.13",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.4.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
